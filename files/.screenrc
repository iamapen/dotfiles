defutf8 on
defencoding utf-8
encoding utf8 utf8
escape ^z^z
defscrollback 5000

hardstatus alwayslastline "%-w%10L>%{=b bw}%n %t%{-}%+w %=%H"


# 背景色消去
#defbce "on"

# 256 colors
term xterm-256color
termcapinfo xterm* 'Co#256:pa#32767:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'

# resize window
termcapinfo xterm* 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

altscreen on

# 太字は明るく
attrcolor b ".I"

vbell off
defwrap on
msgwait 5
msgminwait 1
