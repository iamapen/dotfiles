[diff]
    guitool = WinMerge
[difftool]
    prompt = false
[difftool "WinMerge"]
    path = C:/apps/WinMerge/WinMergeU.exe
    cmd = \"C:/apps/WinMerge/WinMergeU.exe\" -e -x -ub -wl -dl \"Base\" -dr \"Mine\" \"C:/cygwin$LOCAL\" \"$REMOTE\"

[merge]
    tool = WinMerge
[mergetool "WinMerge"]
    path = C:/apps/WinMerge/WinMergeU.exe
    cmd = \"C:/apps/WinMerge/WinMergeU.exe\" /m /r=\"MERGED\" \"C:/cygwin$LOCAL\" \"BASE\" \"$REMOTE\"

